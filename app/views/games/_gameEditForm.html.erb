<%= form_with model: @game  do |form| %>
    <div class="game-edit">
         <div class="title">
            <h1>Edit Game</h1>
        </div>
        <div class="input-div">
            <div class="game-info-edit">
                <div class="input_field">
                    <%= form.label :against_team %><br>
                    <%= form.text_field :against_team , required: true, placeholder: "Opposition Team..." %>
                </div>

                <div class="input_field">
                    <%= form.label :date %><br>
                    <%= form.date_field :date , required: true %>
                </div>

                <div class="input_field">
                    <%= form.label :time %><br>
                    <%= form.time_field :time , required: true%>
                </div>

                <div class="input_field">
                    <%= form.label :rink_name %><br>
                    <%= form.text_field :ring_name, placeholder: "Rink Name..."%>
                </div>

                <div class="input_field">
                    <%= form.label :city %><br>
                    <%= form.text_field :city, placeholder: "City..."%>
                </div>

                <div class="input_field">
                    <%= form.label :state %><br>
                    <%= form.select(:state, options_for_select(us_states, @game.state))%>
                </div>

                <div class="input_field">
                    <%= form.label :Scrimmage_Game? %>
                    <%= form.check_box :scrimmage%>
                </div>
            </div>

            <div class="games-stats-edit">
                <div class="input_field">
                    <%= form.label :goals_for %><br>
                    <%= form.number_field :goals_for, placeholder: "Goals For...", min: 0 %>
                </div>

                <div class="input_field">
                    <%= form.label :goals_against %><br>
                    <%= form.number_field :goals_against, placeholder: "Goals Against...", min: 0 %>
                </div>

                <div class="input_field">
                    <%= form.label :Powerplay_Goals %><br>
                    <%= form.number_field :PowerPlayGoals , min: 0, placeholder: "Powerplay Goals..."%>
                </div>

                <div class="input_field">
                    <%= form.label :powerplay_attempts %><br>
                    <%= form.number_field :powerplay_attemps, min: 0, placeholder: "Powerplay Attempts..." %>
                </div>

                <div class="input_field">
                    <%= form.label :killed_penalties %><br>
                    <%= form.number_field :killed_penalties, min: 0, placeholder: "Killed Penalties..." %>
                </div>

                <div class="input_field">
                    <%= form.label :total_penalties %><br>
                    <%= form.number_field :total_penalties , min: 0, placeholder: "Total Penalties..."%>
                </div>

                <div class="input_field">
                    <%= form.label :Overtime_Game? %>
                    <%= form.check_box :is_overtime%>
                </div>
            </div>
        </div>

        <div class="submit-button">
            <%= form.submit class: "btn btn-success" %>
        </div>
    </div>

    
<% end %>