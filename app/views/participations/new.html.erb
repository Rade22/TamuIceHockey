<html>
  <%= render 'shared/header', stylesheet_link: 'participations', page_title: "Add Participation" %>
  <body>
    <%= render 'shared/navbar' %>

	<div class="body-div-participation-add">
	  <div class="title">
	    <h1>Create Player Statistics</h1>
	  </div>

	  <div class="participation-add">

	<%= form_with model: @participation  do |form| %>
	<div class="input_field">
			<%= form.label :player_id %><br>
				<%= form.collection_select :player_id, Player.order(:last_name), :id, ->(player) { full_name(player) }, {prompt: "Select a player"}  %>
				<% @participation.errors.full_messages_for(:player_id).each do |message| %>
				  <div><%= message %></div>
				<% end %>
		</div><br>

		<div class="input_field">
			<%= form.label :game_id %><br>
				<%= form.collection_select :game_id, Game.order(:date), :id, ->(game) { game_identity(game) }, {prompt: "Select a game"} %>
				<% @participation.errors.full_messages_for(:game_id).each do |message| %>
				  <div><%= message %></div>
				<% end %>
		</div><br>

	<div class="input_field">
		<%= form.label "Goals" %><br>
			<%= form.number_field :goals_skater,  min: 0, value: 0 %>
		</div>

	<div class="input_field">
		<%= form.label "Assists" %><br>
			<%= form.number_field :assists_skater,  min: 0, value: 0 %>
		</div>

	<div class="input_field">
		<%= form.label "Powerplay Goals" %><br>
			<%= form.number_field :powerplay_goals_skater,  min: 0, value: 0 %>
		</div>

	<div class="input_field">
		<%= form.label "Penalty Minutes" %><br>
			<%= form.number_field :penalty_minutes_skater,  min: 0, value: 0 %>
		</div>

	<div class="input_field">
		<%= form.label "Time on Ice" %><br>
			<%= form.number_field :time_on_ice_goalie,  min: 0, value: 0 %>
		</div>

	<div class="submit-button">
		<%= form.submit %>
	</div>

	<% end %>

    <%= link_to("Home", root_path, :class => 'go back') %>
	</div></div>

	<%= render 'shared/footer' %>
	</body>
</html>