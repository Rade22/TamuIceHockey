<html>
    <h1>Change Player Statistics</h1>

    <%= form_with model: @participation  do |form| %>
        <div>
            <%= form.label :goals %><br>
            <%= form.number_field :goals,  min: 0, required: true %>
        </div>

        <div>
            <%= form.label :assist %><br>
            <%= form.number_field :assist,  min: 0, required: true %>
        </div>

        <div>
            <%= form.label :powerplay_goals %><br>
            <%= form.number_field :powerplay_goals,  min: 0, required: true %>
        </div>

        <div>
            <%= form.label :penalty_minutes %><br>
            <%= form.number_field :penalty_minutes,  min: 0, required: true %>
        </div>

        <div>
            <%= form.label :time_on_ice %><br>
            <%= form.time_field :time_on_ice,  min: 0, required: true %>
        </div>      

        <div>
            <%= form.submit %>
        </div>
    
    <% end %>

    <%= link_to("Home", games_path, :class => 'go back') %>
</html>