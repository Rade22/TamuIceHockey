<%= form_with model: @player  do |form| %>
    <div class="player-edit">
         <div class="title">
            <h1>Edit <%= @player.first_name + " " + @player.last_name + "'s" %> Profile</h1>
        </div>
        <div class="player-info-edit">
            <div class = "input_field">
                <%= form.label :first_name %><br>
                <%= form.text_field :first_name , required: true, placeholder: "First name" %>
                <% @player.errors.full_messages_for(:first_name).each do |message| %>
                    <div><%= message %></div>
                <% end %>
            </div>

            <div class = "input_field">
                <%= form.label :last_name %><br>
                <%= form.text_field :last_name , required: true, placeholder: "Last name" %>
                <% @player.errors.full_messages_for(:last_name).each do |message| %>
                    <div><%= message %></div>
                <% end %>
            </div>
                
            <div class = "input_field">
                <%= form.label :position %><br>
                <%= form.select :position, ["Center","Defenseman","Goalie", "Left Wing", "Right Wing"], required: true%>
                <% @player.errors.full_messages_for(:position).each do |message| %>
                    <div><%= message %></div>
                <% end %>
            </div>
                
            <div class = "input_field">
                <%= form.label :number %><br>
                <%= form.number_field :number, min: 0, max: 99, :required => 'required' %>
                <% @player.errors.full_messages_for(:number).each do |message| %>
                    <div><%= message %></div>
                <% end %>
            </div>
                
            <div class = "input_field">
                <%= form.label :image_link %><br>
                <%= form.text_field :image_link , required: true, placeholder: "Image_link" %>
                <% @player.errors.full_messages_for(:image_link).each do |message| %>
                    <div><%= message %></div>
                <% end %>
            </div>
                
            <div class="input_field">
                    <%= form.label "Is player active?" %>
                    <%= form.check_box :active%>
            </div>
                
            <div class = "submit-button">
                <%= form.submit class: "btn btn-success" %>
            </div>
        </div>
    </div>
<% end %>