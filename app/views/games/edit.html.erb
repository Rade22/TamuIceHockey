
<html>
    <h1>Change Game Statistics</h1>

    <%= form_with model: @game  do |form| %>
        <div>
            <%= form.label :against_team %><br>
            <%= form.text_field :against_team %>
        </div>

        <div>
            <%= form.label :date %><br>
            <%= form.date_field :date %>
        </div>
       

        <div>
            <%= form.label :location %><br>
            <%= form.text_field :location %>
        </div>

        <div>
            <%= form.label :opposing_score %><br>
            <%= form.text_field :opposing_score %>
        </div>

        <div>
            <%= form.submit %>
        </div>
    
    <% end %>

    <%= link_to("Home", games_path, :class => 'go back') %>
</html>