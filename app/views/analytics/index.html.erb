<html lang="en">
<%= render 'shared/header', stylesheet_link: 'analytics', page_title: "Analytics Page" %>

<body>
    <%= render 'shared/navbar' %>


   <div class="team-stat-div">
    <table class="team_stat">
        <tr>
            <th>Team</th>
            <th>Game played</th>
            <th>Total Points</th>
            <th>Win</th>
            <th>Win OVT</th>
            <th>Lose</th>
            <th>Lose OVT</th>
            <th>Goals scored</th>
            <th>Goals against</th>
            <th>Goal difference</th>
        </tr>
        <tr>
            <td>Texas A&M</td>
            <td><%=@total_game%></td>
            <td><%=@total_score%></td>
            <td><%=@win_game%></td>
            <td><%=@overtime_win_game%></td>
            <td><%=@lose_game%></td>
            <td><%=@overtime_lose_game%></td>
            <td><%=@total_goal_for%></td>
            <td><%=@total_goal_against%></td>
            <td><%=@total_goal_for - @total_goal_against%></td>
        </tr>
    </table>
  </div>
    <%if @goal_score_season.size() >0 %>
        <div class="graphs">
            <%= goals_for_vs_goals_against %>
        </div>
    <%end%>
    <%if @participation_graph.size() > 0 %>
        <div class="graphs">
            <%= score_by_skater %>
        </div>
    <%end%>
    <% if @participation_graph.size() > 0 %>
        <div class="graphs">
            <%= assist_by_skater %>
        </div>
    <%end%>
    <% if @win_game + @lose_game + @overtime_lose_game + @overtime_win_game > 0 %>
        <div class="graphs">
            <%= win_lose_overtime %>
        </div>
    <%end%>
    <% if @powerplay_season.size() > 0 %>
        <div class="graphs">
            <%= penalties_vs_powerplays %>
        </div>
    <%end%>
    <% if @powerplay_goal + @normal_goal > 0 %>
        <div class="graphs">
            <%= goal_source_powerplay_other %>
        </div>
    <%end%>
    <% if @powerplay_season.size() > 0 %>
        <div class="graphs">
            <%= powerplays_vs_powerplay_goals %>
        </div>
    <%end%>
    <% if Player.count() > 0 %>
        <div class="graphs">
            <%= player_position_count %>
        </div>
    <%end%>
    <% if Game.count() > 0 %>
        <div class="graphs">
            <%= game_location_by_state %>
        </div>
    <%end%>
  
    <%= render 'shared/footer' %>
</body>
</html>