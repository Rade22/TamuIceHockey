<html lang="en">
<%= render 'shared/header', stylesheet_link: 'participations', page_title: "Delete Stats" %>
<body>
    <%= render 'shared/navbar' %>

    <div class="body-div-game-delete">
      <div class="title">
        <h2>Delete Stats</h2>
      </div>

      <div class="game-stats-delete">
        <%= form_for(@participation, :method => 'delete') do |f|%>
          <h4>Are you sure you want to permanently delete this stats entry?</h4>
          <p><%= full_name(@player)%>, <%= game_identity(@game) %></p>

          <div class="form-buttons">
            <%= f.submit("Delete Stats", class: "btn btn-danger") %>
          </div>
        <% end %>
      </div>

      <div class="delete-participation-div">
        <%= link_to '<button class="btn btn-success">Edit Stats</button>'.html_safe, edit_participation_path(@participation)%>
      </div>
    </div>
    
    <%= render 'shared/footer' %>
</body>


